<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke android:color="@color/block_gray_dark" android:dashGap="@dimen/dimen_8dp" android:dashWidth="@dimen/dimen_4dp" android:width="2dp"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="2dp"
        >
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="@color/block_gray" android:width="1dp"/>
        </shape>
    </item>
</layer-list>