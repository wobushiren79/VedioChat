<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_600dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_60dp"
    android:layout_marginRight="@dimen/dimen_60dp"
    android:background="@drawable/dialog_bg_white_round"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_26dp"
        android:layout_marginTop="@dimen/dimen_36dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/base_black"
        android:textSize="@dimen/dimen_36dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_36dp"
        android:paddingRight="@dimen/dimen_44dp"
        android:paddingLeft="@dimen/dimen_44dp"
        android:textColor="@color/base_gray"
        android:lineSpacingExtra="@dimen/dimen_18dp"
        android:textSize="@dimen/dimen_32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_eff1f7" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_88dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/dimen_36dp" />

        <TextView
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/color_eff1f7" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_88dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_f65aa0"
            android:textSize="@dimen/dimen_36dp" />
    </LinearLayout>
</LinearLayout>