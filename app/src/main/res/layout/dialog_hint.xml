<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/base_dialog_hint_bg"
    android:minWidth="@dimen/dp_120"
    android:minHeight="@dimen/dp_100"
    android:padding="@dimen/dp_8"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_hint_iv"
        android:src="@drawable/pop_buffer"
        android:scaleType="centerInside"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
    <TextView
        android:id="@+id/dialog_hint_tv_describe"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/white"
        android:textSize="@dimen/tz_14"
        android:text="@string/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>