<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg_white_round"
    android:padding="@dimen/dp_22"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/dialog_readmain_account_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="请输入QQ号"
        android:textColor="@color/base_black"
        android:textSize="@dimen/tz_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_readmain_account_tv_title"
        android:id="@+id/dialog_readmain_account_et"
        android:layout_width="match_parent"
        tools:text="498869020"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:maxLength="20"
        android:paddingBottom="22dp"
        android:paddingTop="0dp"
       />
    <TextView
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/dialog_readmain_account_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/dialog_readmain_account_tv_ok"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/base_yellow"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_32"/>
    <TextView
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_readmain_account_tv_ok"
        app:layout_constraintEnd_toStartOf="@+id/dialog_readmain_account_tv_ok"
        android:id="@+id/dialog_readmain_account_tv_cancle"
        android:text="取消"
        android:textColor="@color/base_gray"
        android:gravity="center"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_32"/>
</android.support.constraint.ConstraintLayout>