<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_620dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_700dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/buiness_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>r

            <RadioGroup
                android:id="@+id/rg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:orientation="horizontal">

            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_140dp"
            android:background="@drawable/base_bg_white_round_24_bottom">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:textColor="@color/base_black"
                android:textSize="@dimen/dimen_30dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/dimen_24dp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:background="@color/base_gray" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/dimen_24dp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:background="@color/base_gray" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/base_gray"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:background="@drawable/base_bg_gray_round">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_video"
                    android:layout_width="@dimen/dimen_120dp"
                    android:layout_height="@dimen/dimen_80dp"
                    app:riv_corner_radius="@dimen/dimen_4dp" />

                <ImageView

                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_video_play" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:src="@drawable/btn_dialog_cancel_2" />
</LinearLayout>