<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_96dp"
    android:paddingStart="@dimen/dimen_44dp"
    android:paddingEnd="@dimen/dimen_44dp"
    android:paddingTop="@dimen/dimen_16dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="加时长"
        android:id="@+id/item_my_wallet_tv_desc"
        android:textSize="@dimen/dimen_28dp"
        android:textColor="@color/base_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="+0.55元"
        android:id="@+id/item_my_wallet_tv_price"
        android:textSize="@dimen/dimen_28dp"
        android:textColor="@color/base_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>