<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_224dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_gift_cl"
        android:layout_width="@dimen/dimen_179dp"
        android:layout_height="@dimen/dimen_223dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_marginTop="@dimen/dimen_24dp"
            android:id="@+id/dialog_item_gift_iv_cover"
            android:layout_width="@dimen/dimen_92dp"
            android:layout_height="@dimen/dimen_92dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/videocall_answer_btn" />

        <TextView
            android:id="@+id/dialog_item_gift_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:minLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_28dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_gift_iv_cover"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_gift_iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_gift_iv_cover"
            tools:text="小黄瓜" />

        <LinearLayout
            android:id="@+id/dialog_item_gift_tv_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_gift_tv_name"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_gift_tv_name"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_gift_tv_name">

            <ImageView
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_icon_jewel" />

            <TextView
                android:id="@+id/dialog_item_gift_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:minLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_28dp"
                tools:text="10钻" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_item_gift_tv_addTime"
            android:textColor="@color/gray_c8c8c8"
            android:layout_marginTop="@dimen/dimen_12dp"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_gift_tv_price_layout"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_gift_tv_price_layout"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_gift_tv_price_layout"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dimen_24dp"
            android:layout_height="wrap_content"
            tools:text="时长+15s"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>