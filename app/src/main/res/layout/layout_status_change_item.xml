<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="@dimen/dimen_26dp"
        android:layout_height="@dimen/dimen_26dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/base_bg_round_theme"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toRightOf="@id/iv_mark"
        android:src="@color/color_e8ebf1" />

    <ImageView
        android:id="@+id/left_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toLeftOf="@id/iv_mark"
        android:src="@color/color_e8ebf1" />

    <TextView
        android:id="@+id/tv_status_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="待服务"
        android:textColor="@color/base_gray"
        android:textSize="@dimen/dimen_28dp" />
</RelativeLayout>