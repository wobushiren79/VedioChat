<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.FeedBackActivity">
    <android.support.design.widget.AppBarLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appBar_layout"
        app:elevation="@dimen/dimen_0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/nav_btn_back_black"
            app:title="意见反馈"
            android:background="@color/base_appbar_background_light"
            app:titleTextColor="@color/base_black"
            app:theme="@style/AppBaseTheme.Toolbar.ActionMenu.Light"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_ll"/>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:fitsSystemWindows="true"
        android:id="@+id/opinion_publish_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <ScrollView
         android:fillViewport="true"
         android:layout_marginBottom="@dimen/dimen_110dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <EditText
                 android:textColorHint="@color/base_hint"
                 android:maxLength="300"
                 android:id="@+id/opinion_publish_et"
                 android:textSize="@dimen/textsize_16sp"
                 android:padding="@dimen/dimen_32dp"
                 android:gravity="start"
                 android:minLines="5"
                 android:hint="输入你的意见或建议(最多300个字符)"
                 android:background="@color/transparent"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 />
             <android.support.v7.widget.RecyclerView
                 android:layout_marginTop="@dimen/dimen_40dp"
                 android:id="@+id/opinion_publish_rv"
                 app:layoutManager="GridLayoutManager"
                 app:spanCount="3"
                 tools:listitem="@layout/item_feedback"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/opinion_publish_et"
                 android:paddingStart="@dimen/dimen_60dp"
                 android:paddingLeft="@dimen/dimen_60dp"
                 android:paddingEnd="@dimen/dimen_32dp"
                 android:paddingRight="@dimen/dimen_32dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 android:layout_marginBottom="@dimen/dimen_32dp"/>
         </RelativeLayout>
     </ScrollView>
      <RelativeLayout
          android:fitsSystemWindows="true"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <RelativeLayout
              android:layout_alignParentBottom="true"
              android:id="@+id/opinion_publish_buttom_rl"
              android:paddingLeft="0dp"
              android:paddingStart="0dp"
              android:paddingRight="@dimen/dimen_32dp"
              android:paddingEnd="@dimen/dimen_32dp"
              android:layout_width="match_parent"
              android:layout_gravity="bottom"
              android:layout_height="@dimen/dimen_110dp">
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minWidth="@dimen/dimen_96dp"
                  android:minHeight="@dimen/dimen_96dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/image_btn_select_icon_figure"
                  android:id="@+id/opinion_publish_iv_image" />
              <TextView
                  android:id="@+id/opinion_publish_tv_count"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="300"
                  android:layout_marginRight="@dimen/dimen_20dp"
                  android:layout_marginEnd="@dimen/dimen_20dp"
                  android:textColor="@color/base_hint"
                  android:textSize="@dimen/textsize_14sp"
                  android:layout_toLeftOf="@+id/opinion_publish_btn_puhlish"
                  android:layout_alignBaseline="@+id/opinion_publish_btn_puhlish"
                  android:layout_toStartOf="@+id/opinion_publish_btn_puhlish"
                  />
              <Button
                  android:enabled="false"
                  android:background="@drawable/base_btn_stroke_yellow_line_selecter"
                  android:layout_width="@dimen/dimen_180dp"
                  android:layout_height="@dimen/dimen_80dp"
                  android:textSize="@dimen/textsize_16sp"
                  android:textColor="@color/base_btn_textcolor_yellow_selecter"
                  android:text="@string/submit"
                  android:layout_centerVertical="true"
                  android:gravity="center"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/opinion_publish_btn_puhlish" />
          </RelativeLayout>
      </RelativeLayout>
    </FrameLayout>
</LinearLayout>
