<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/item_discover_photo_iv_photo"
        tools:src="@drawable/bg"
        android:layout_width="@dimen/dp_70"
        tools:scaleType="centerCrop"
        android:layout_height="@dimen/dp_70"/>

    <TextView
        android:id="@+id/item_discover_photo_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/item_discover_photo_iv_photo"
        app:layout_constraintEnd_toEndOf="@+id/item_discover_photo_iv_photo"
        app:layout_constraintStart_toStartOf="@+id/item_discover_photo_iv_photo"
        app:layout_constraintTop_toTopOf="@+id/item_discover_photo_iv_photo"
        tools:text="5+"/>
</android.support.constraint.ConstraintLayout>