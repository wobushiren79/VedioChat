<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_gift_cl"
        android:layout_width="@dimen/dimen_179dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_12dp"
        tools:background="@drawable/dialog_gift_selectbg_stroke">

        <ImageView
            android:id="@+id/dialog_item_gift_iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_84dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/videocall_answer_btn" />

        <TextView
            android:id="@+id/dialog_item_gift_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:minLines="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_24dp"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_gift_iv_cover"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_gift_iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_gift_iv_cover" />

        <TextView
            android:id="@+id/dialog_item_gift_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:minLines="1"
            android:textColor="@color/gray_c8c8c8"
            android:textSize="@dimen/dimen_20dp"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_gift_tv_name"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_gift_tv_name"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_gift_tv_name" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>