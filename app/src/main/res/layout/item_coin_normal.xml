<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/white"
    android:layout_gravity="center_vertical|center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:paddingTop="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_22"
    android:paddingStart="@dimen/dp_22"
    android:paddingBottom="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_coin_tv_price"
        tools:text="60000钻石"
        android:textSize="@dimen/tz_16"
        android:textColor="@color/base_black"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"/>
    <!--<TextView-->
        <!--app:layout_constraintBaseline_toBaselineOf="@+id/item_coin_tv_price"-->
        <!--app:layout_constraintStart_toEndOf="@+id/item_coin_tv_price"-->
        <!--android:id="@+id/item_coin_tv_unit"-->
        <!--tools:text="钻石"-->
        <!--android:textSize="@dimen/tz_12"-->
        <!--android:textColor="@color/base_black"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->
    <FrameLayout
        android:layout_marginStart="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_coin_tv_price"
        android:id="@+id/item_coin_fl_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/icon_recharge_petals"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"/>
        <TextView
            android:id="@+id/item_coin_tv_sale_icon"
            android:layout_marginTop="-4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tz_14"
            tools:text="+180"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/tz_8"
            android:text="钻石"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:id="@+id/item_coin_tv_tag"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:textSize="@dimen/tz_14"
        android:textColor="@color/white"
        android:background="@drawable/coin_pay_bg_round_tag_solid"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@+id/item_coin_fl_sale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="首冲"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/coin_pay_item_select"
        android:textColor="@color/base_btn_textcolor_white_gray_selecter"
        android:id="@+id/item_coin_btn_price"
        tools:text="20元"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"/>
</android.support.constraint.ConstraintLayout>