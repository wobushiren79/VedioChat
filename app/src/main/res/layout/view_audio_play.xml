<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_140dp"
    android:layout_height="@dimen/dimen_38dp"
    android:background="@drawable/back_audio_play"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_horn"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_audio_horn_3" />

    <TextView
        android:id="@+id/tv_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="0''"
        android:textSize="@dimen/dimen_22dp" />
</LinearLayout>