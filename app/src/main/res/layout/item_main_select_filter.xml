<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="@dimen/dp_60"
             android:layout_width="@dimen/dp_60"
             android:layout_marginTop="7.5dp"
             android:layout_marginStart="7.5dp"
             android:layout_marginEnd="7.5dp"
             android:layout_marginBottom="7.5dp"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--tools:background="@drawable/main_select_bg_normal"-->
    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="true"
        android:id="@+id/item_main_iv_filter_type"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dp_60"
        tools:src="@drawable/bg_btn_wbq"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/item_main_select_iv_down"
        android:layout_gravity="bottom|end"
        android:src="@drawable/icon_mianju_down"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"/>
    <ProgressBar
        android:visibility="gone"
        style="@style/AppBaseTheme.ProgressBar.Small"
        android:id="@+id/item_main_select_pb"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"/>
</FrameLayout>