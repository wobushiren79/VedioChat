<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_120dp"
    android:layout_height="@dimen/dimen_120dp"
    android:layout_marginBottom="7.5dp"
    android:layout_marginEnd="7.5dp"
    android:layout_marginStart="7.5dp"
    android:layout_marginTop="7.5dp">
    <!--tools:background="@drawable/main_select_bg_normal"-->

    <FrameLayout
        android:id="@+id/item_main_fl_noraml"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_main_iv_filter_type"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="@dimen/dimen_6dp"
            app:riv_oval="true"
            tools:src="@drawable/bg_btn_wbq" />

        <ImageView
            android:id="@+id/item_main_select_iv_down"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:src="@drawable/icon_mianju_down"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/item_main_select_pb"
            style="@style/AppBaseTheme.ProgressBar.Small"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <CheckedTextView
        android:id="@+id/item_main_iv_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/dialog_beauty_item_enable"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center" />
</FrameLayout>