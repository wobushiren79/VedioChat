<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:text="00:00"
        android:textColor="@color/base_black"
        android:textSize="@dimen/dimen_29dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_audio_record"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_below="@+id/tv_audio_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_audio_record" />

    <ImageView
        android:id="@+id/iv_audio_play"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_below="@+id/tv_audio_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_audio_play"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_above="@+id/ll_audio_bt"
        android:background="@color/color_e8ebf1" />

    <LinearLayout
        android:id="@+id/ll_audio_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取 消"
            android:textColor="@color/base_gray"
            android:textSize="@dimen/dimen_32dp" />

        <TextView
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/color_e8ebf1" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确 定"
            android:textColor="@color/base_black"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>


</RelativeLayout>