<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:paddingEnd="0dp"
    android:paddingStart="@dimen/dimen_44dp"
    >

    <TextView
        android:id="@+id/item_accountparticulars_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/base_black"
        android:textSize="@dimen/dimen_36dp"
        tools:text="提现到支付宝"/>

    <TextView
        android:layout_marginEnd="@dimen/dimen_44dp"
        android:id="@+id/item_accountparticulars_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textColor="@color/base_gray"
        android:textSize="@dimen/dimen_28dp"
        tools:text="2017-08-01"/>

    <TextView
        android:layout_marginEnd="@dimen/dimen_44dp"
        android:id="@+id/item_accountparticulars_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/item_accountparticulars_tv_time"
        android:layout_marginBottom="8dp"
        android:textColor="@color/base_black"
        android:textSize="@dimen/dimen_32dp"
        tools:text="-500"/>
    <View
        android:id="@+id/item_accountparticulars_v_line"
        android:layout_alignParentBottom="true"
        android:background="@drawable/divider_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>