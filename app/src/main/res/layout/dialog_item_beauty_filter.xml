<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_88dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginLeft="@dimen/dimen_22dp"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_item_beauty_cl_filter_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dialog_item_beauty_iv_filter_type"
            android:layout_width="@dimen/dimen_88dp"
            android:layout_height="@dimen/dimen_88dp"
            android:layout_gravity="center_vertical"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="@dimen/dimen_6dp"
            app:riv_oval="true"
            tools:src="@drawable/bg_btn_wbq" />

        <CheckedTextView
            android:id="@+id/dialog_beauty_ctv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/dialog_beauty_white_pink_selecter"
            android:textSize="@dimen/dimen_24dp"
            app:layout_constraintEnd_toEndOf="@+id/dialog_item_beauty_iv_filter_type"
            app:layout_constraintStart_toStartOf="@+id/dialog_item_beauty_iv_filter_type"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_beauty_iv_filter_type"
            tools:text="自然" />
    </android.support.constraint.ConstraintLayout>

    <CheckedTextView
        android:id="@+id/dialog_beauty_tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88dp"
        android:layout_gravity="center"
        android:background="@drawable/beauty_item_level_select"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_44dp"
        tools:text="1" />
</FrameLayout>