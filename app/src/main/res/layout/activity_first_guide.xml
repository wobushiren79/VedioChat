<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_background"
    tools:context="com.huanmedia.videochat.launch.fragment.FirstGuideFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/first_guide_viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/first_guide_ll_dotGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/first_guide_dot0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/first_gudie_dot_level" />

        <TextView
            android:id="@+id/first_guide_dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/first_gudie_dot_level" />

        <TextView
            android:id="@+id/first_guide_dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/first_gudie_dot_level" />

        <TextView
            android:id="@+id/first_guide_dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/first_gudie_dot_level" />
    </LinearLayout>
</FrameLayout>
