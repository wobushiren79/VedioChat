        <!--android:layout_marginLeft="@dimen/dimen_44dp"-->
        <!--android:layout_marginRight="@dimen/dimen_44dp"-->
        <!--android:paddingStart="@dimen/dimen_44dp"-->
        <!--android:paddingEnd="@dimen/dimen_44dp"-->
        <!--android:id="@+id/business_card_btn_calling"-->
