<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huanmedia.videochat.pay.AccountParticularsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/nav_btn_back"
        app:popupTheme="@style/AppBaseTheme.PopupTheme"
        app:theme="@style/AppBaseTheme.Toolbar.ActionMenu"
        app:titleTextColor="@color/white"
        >

        <TextView
            android:id="@+id/account_particulars_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/nav_btn_pulldown"
            android:drawablePadding="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_36dp"
            tools:listitem="@layout/sample_wheel_item"
            tools:text="可提现明细"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/account_particulars_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
</LinearLayout>
