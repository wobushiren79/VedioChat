<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:clipChildren="false"
             android:clipToPadding="false"
             xmlns:tools="http://schemas.android.com/tools"
             tools:background="#55B7C0"
             tools:layout_height="match_parent"
             android:layout_height="wrap_content">
    <RelativeLayout
        android:clipToPadding="false"
        android:clipChildren="false"
        android:id="@+id/infoRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
      >
    <RelativeLayout
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="66dp"
        android:paddingBottom="4dp"
        android:background="@drawable/bg_giftlayout"
        android:id="@+id/infoRl_bg"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        >

        <TextView
            android:id="@+id/infoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            tools:text="Eric \n送了一个+U鹿"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>
    <ImageView
        android:layout_toEndOf="@+id/infoRl_bg"
        android:layout_marginStart="-70dp"
        tools:src="@drawable/bg_logot"
        android:scaleType="centerInside"
        android:id="@+id/giftIv"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        />
        <org.dync.giftlibrary.widget.StrokeTextView
            android:layout_toEndOf="@+id/infoRl_bg"
            android:layout_marginStart="8dp"
            android:id="@+id/animation_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="x 1"
            android:textStyle="bold"
            android:textColor="@color/base_yellow"
            android:textSize="30sp"
            app:innnerColor="@color/base_yellow"
            app:outerColor="@color/base_bolder" />
    </RelativeLayout>

</FrameLayout>